        "EFL-2.0",
        "Entessa",
        "EUDatagrid",
        "EUPL-1.2",
        "FairSource",
        "Frameworx-1.0",
        "0BSD",
        "AGPL-3.0",
        "GPL-2.0",
        "GPL-3.0",
        "LGPL-2.1",
        "LGPL-3.0",
        "HPND",
